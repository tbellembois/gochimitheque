FROM quay.io/keycloak/keycloak:26.2.0 AS builder

ARG KC_DB
ARG KC_FEATURES
ARG KC_HTTP_RELATIVE_PATH
ARG KC_HOSTNAME_STRICT_HTTPS
ARG KC_TZ

ENV KC_DB=${KC_DB}
ENV KC_FEATURES=${KC_FEATURES}
ENV KC_HTTP_RELATIVE_PATH=${KC_HTTP_RELATIVE_PATH}
ENV KC_HOSTNAME_STRICT_HTTPS=${KC_HOSTNAME_STRICT_HTTPS}
ENV TZ=${KC_TZ}

RUN echo "KC_DB=${KC_DB}"
RUN echo "KC_FEATURES=${KC_FEATURES}"
RUN echo "KC_HTTP_RELATIVE_PATH=${KC_HTTP_RELATIVE_PATH}"
RUN echo "KC_HOSTNAME_STRICT_HTTPS=${KC_HOSTNAME_STRICT_HTTPS}"
RUN echo "KC_TZ=${KC_TZ}"

RUN /opt/keycloak/bin/kc.sh --verbose build

FROM quay.io/keycloak/keycloak:26.2.0

COPY --from=builder /opt/keycloak/ /opt/keycloak/
WORKDIR /opt/keycloak

ARG KC_DB
ARG KC_DB_URL
ARG KC_DB_USERNAME
ARG KC_DB_PASSWORD
ARG KC_HOSTNAME
ARG KC_PROXY
ARG KC_HOSTNAME_STRICT_HTTPS
ARG KC_TZ

ENV KC_DB=${KC_DB}
ENV KC_DB_URL=${KC_DB_URL}
ENV KC_DB_USERNAME=${KC_DB_USERNAME}
ENV KC_DB_PASSWORD=${KC_DB_PASSWORD}
ENV KC_HOSTNAME=${KC_HOSTNAME}
ENV KC_PROXY=${KC_PROXY}
ENV KC_HOSTNAME_STRICT_HTTPS=${KC_HOSTNAME_STRICT_HTTPS}
ENV TZ=${KC_TZ}

ENTRYPOINT ["/opt/keycloak/bin/kc.sh", "start"]
