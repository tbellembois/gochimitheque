                        hr.dropdown-divider
                    div#menu_storelocations.collapse
                        span.p-2.mdi.mdi-docker.mdi-24px
                            = T("menu_storelocation", 1)
                        a(href="#", onclick="Menu_loadContent('storelocation', '" + c.AppURL + c.AppPath + "v/storelocations', 'StoreLocation_list')").dropdown-item
                            span.iconlabel
                                = T("list", 1)
                        a#menu_create_storelocation.collapse(href="#", onclick="Menu_loadContent('storelocation', '" + c.AppURL + c.AppPath + "vc/storelocations', 'StoreLocation_create')").dropdown-item
                            span.iconlabel
