            li.nav-item#menu_create_product.collapse
                a(href="#", onclick="Menu_loadContent('product', '" + c.AppURL + c.AppPath + "vc/products', 'Product_create')").nav-link
                    span.mdi.mdi-tag.mdi-36px.iconlabel
