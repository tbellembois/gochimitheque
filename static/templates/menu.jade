                        = T("menu_pubchem", 1)

            li.nav-item.dropdown#menu_management.collapse
                a(href="#").nav-link.dropdown-toggle#navbarDropdown(
                    role="button" 
                    data-toggle="dropdown" 
                    aria-haspopup="true" 
                    aria-expanded="false")
                    span.mdi.mdi-domain.mdi-36px.iconlabel
                        = T("menu_management", 1)
                        
                div.dropdown-menu(aria-labelledby="navbarDropdown")
